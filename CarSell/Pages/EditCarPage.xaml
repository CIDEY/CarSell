<Page x:Class="CarSell.Pages.EditCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarSell.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EditCarPage">

    <Border>

        <Grid Background="#027BF4">

            <Grid.RowDefinitions>

                <RowDefinition Height="100"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="1196*"/>
                    <ColumnDefinition Width="145*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="144*"/>
                    <ColumnDefinition Width="145*"/>
                    <ColumnDefinition Width="145*"/>
                    <ColumnDefinition Width="145*"/>
                    <ColumnDefinition Width="145*"/>

                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\carLogoSell.png"
                       Width="60"
                       HorizontalAlignment="Left"
                       Margin="20,20,0,20"/>

                <Button Grid.Column="7"
                        Background="#027BF4"
                        Foreground="#027BF4" 
                        BorderBrush="{x:Null}"
                        Width="135"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="GoToAuthPage" Height="Auto">

                    <StackPanel>

                        <Image Grid.Column="6"
                               Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\log-out.png"
                               Width="62"
                               HorizontalAlignment="Center"
                               Height="70"/>

                    </StackPanel>

                </Button>

                <Button Grid.Column="6"
                        Background="#027BF4"
                        Foreground="#027BF4" 
                        BorderBrush="{x:Null}"
                        Width="135"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="GoToProfile" 
                        Height="Auto">

                    <StackPanel>

                        <Image Grid.Column="5"
                               Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\user1.png"
                               Width="79"
                               HorizontalAlignment="Center"
                               Height="76"/>

                    </StackPanel>

                </Button>

                <Button Grid.Column="5"
                        Background="#027BF4"
                        Foreground="#027BF4" 
                        BorderBrush="{x:Null}"
                        Width="135"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="GoToBusket" Height="Auto">

                    <StackPanel>

                        <Image Grid.Column="4"
                               Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\shopping-cart.png"
                               Width="58"
                               HorizontalAlignment="Center"
                               Height="67"/>

                    </StackPanel>

                </Button>

                <Button Grid.Column="4"
                        Background="#027BF4"
                        Foreground="#027BF4" 
                        BorderBrush="{x:Null}"
                        Width="135"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="GoToFavorite" Height="Auto">

                    <StackPanel HorizontalAlignment="Center">

                        <Image Grid.Column="2"
                               Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\heart.png"
                               Width="101"
                               HorizontalAlignment="Center"
                               Grid.ColumnSpan="2" 
                               Height="91"/>

                    </StackPanel>

                </Button>

                <Button Grid.Column="3"
                        Background="#027BF4"
                        Foreground="#027BF4" 
                        BorderBrush="{x:Null}"
                        Width="134"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="GoToCredit" 
                        Height="Auto">

                    <StackPanel HorizontalAlignment="Center" 
                                Width="130" 
                                Height="95">

                        <Image Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\percent.png"
                               HorizontalAlignment="Center" Height="93"/>

                    </StackPanel>

                </Button>

                <Button Grid.Column="1"
                        Background="#027BF4"
                        Foreground="#027BF4" 
                        BorderBrush="{x:Null}"
                        Width="auto"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="GoToCoupons" Height="Auto">

                    <StackPanel HorizontalAlignment="Center"
                                Width="134"
                                Height="99"
                                VerticalAlignment="Center">
                        <Image Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\pngwing.png" 
                               Height="95" 
                               Margin="14,0,21,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Width="99"/>

                    </StackPanel>

                </Button>

            </Grid>

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>

                    <RowDefinition Height="22*"/>
                    <RowDefinition Height="198*"/>
                    <RowDefinition Height="25*"/>

                </Grid.RowDefinitions>

                <Button Height="53"
                        Width="220"
                        Grid.Row="2" 
                        BorderBrush="#fff"
                        Background="#013C78"
                        Foreground="#FFF"
                        FontSize="50"
                        FontFamily="Segoe UI Black"
                        Click="EditCar">

                    <Button.Resources>

                        <Style TargetType="Border">

                            <Setter Property="CornerRadius"
                                    Value="10"/>

                        </Style>

                    </Button.Resources>

                    <StackPanel Orientation="Horizontal" 
                                Width="180">

                        <Label Content="Изменить"
                               Foreground="#fff"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               HorizontalContentAlignment="Center" 
                               Width="147" 
                               FontFamily="/CarShop;component/Resource/Fonts/#Open Sans SemiBold">

                        </Label>

                        <Image Source="C:\Users\kamal\source\repos\CarShop\CarShop\Resource\Images\icon3.png" 
                               Height="42" 
                               Width="33"/>

                    </StackPanel>

                </Button>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="613*"/>
                        <ColumnDefinition Width="689*"/>
                        <ColumnDefinition Width="618*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            MaxHeight="67"
                            HorizontalAlignment="Left"
                            Margin="20,28,0,21"
                            MaxWidth="151.55"
                            BorderBrush="#013C78"
                            Background="#013C78"
                            Foreground="#FFF"
                            FontSize="11"
                            FontFamily="Segoe UI Black"
                            Click="BackToKatalog" Height="Auto">

                        <Button.Resources>

                            <Style TargetType="Border">

                                <Setter Property="CornerRadius"
                                        Value="10"/>

                            </Style>

                        </Button.Resources>

                        <StackPanel Orientation="Horizontal" 
                                    Width="149">

                            <Label Content="В каталог"
                                   Foreground="#fff"
                                   FontSize="20"
                                   FontFamily="/CarShop;component/Resource/Fonts/#Public Sans"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   HorizontalContentAlignment="Center" 
                                   Width="123">

                            </Label>

                        </StackPanel>

                    </Button>

                    <Label Grid.Column="1"
                       Content="Редактирование авто" 
                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                       Foreground="White" 
                       FontSize="64" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Height="84"
                       Width="686" Margin="1,2,2,2"/>

                </Grid>

                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="151*"/>
                        <ColumnDefinition Width="347*"/>
                        <ColumnDefinition Width="142*"/>

                    </Grid.ColumnDefinitions>

                    <Border Background="White"
                            Grid.Column="1">

                        <Border.Resources>

                            <Style TargetType="Border">

                                <Setter Property="CornerRadius"
                                        Value="50"/>

                            </Style>

                        </Border.Resources>

                        <Grid>

                            <Grid.RowDefinitions>

                                <RowDefinition Height="124*"/>
                                <RowDefinition Height="124*"/>
                                <RowDefinition Height="124*"/>
                                <RowDefinition Height="124*"/>
                                <RowDefinition Height="124*"/>
                                <RowDefinition Height="124*"/>
                                <RowDefinition Height="124*"/>

                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="0">

                                <Label Content="Название автомобиля:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="nameCar1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25"
                                         KeyDown="TextBoxKeyDown"
                                         PreviewKeyDown="TextBoxKeyDown"
                                         TextChanged="NameCarTextChanged"
                                         PreviewTextInput="NameCarTextInput">

                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="1">

                                <Label Content="Модель:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="model1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25"
                                         KeyDown="TextBoxKeyDown"
                                         PreviewKeyDown="TextBoxKeyDown"
                                         TextChanged="ModelCarTextChanged"
                                         PreviewTextInput="ModelCarTextInput">

                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="2">

                                <Label Content="Лошадиные силы:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="hp1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25"
                                         KeyDown="TextBoxKeyDown"
                                         PreviewKeyDown="TextBoxKeyDown"
                                         TextChanged="HpCarTextChanged"
                                         PreviewTextInput="HpCarTextInput">

                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="3">

                                <Label Content="Комплектация:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="equipment1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25"
                                         KeyDown="TextBoxKeyDown"
                                         PreviewKeyDown="TextBoxKeyDown"
                                         TextChanged="NameCarTextChanged"
                                         PreviewTextInput="NameCarTextInput">

                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="4">

                                <Label Content="Цена:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="price1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25"
                                         KeyDown="TextBoxKeyDown"
                                         PreviewKeyDown="TextBoxKeyDown"
                                         TextChanged="HpCarTextChanged"
                                         PreviewTextInput="HpCarTextInput">

                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="5">

                                <Label Content="Описание:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="infoForCar1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25">

                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="6">

                                <Label Content="Цвет:" 
                                       FontFamily="/CarShop;component/Resource/Fonts/#Public Sans" 
                                       FontWeight="Bold" 
                                       Margin="37,10,0,0" 
                                       Height="44"
                                       FontSize="30"
                                       VerticalAlignment="Stretch"/>

                                <TextBox Height="37"
                                         Width="958"
                                         HorizontalAlignment="Left"
                                         Margin="40,0,0,0"
                                         x:Name="color1"
                                         FontFamily="/CarSell;component/Resource/Fonts/#Open Sans SemiBold"
                                         VerticalAlignment="Center"
                                         FontSize="25"
                                         KeyDown="TextBoxKeyDown"
                                         PreviewKeyDown="TextBoxKeyDown"
                                         TextChanged="NameCarTextChanged"
                                         PreviewTextInput="NameCarTextInput">

                                </TextBox>

                            </StackPanel>

                        </Grid>

                    </Border>

                </Grid>

            </Grid>

        </Grid>

    </Border>

</Page>
